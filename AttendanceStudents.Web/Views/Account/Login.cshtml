@{
Layout = null;
ViewData["Title"] = "Присуство на студенти";
var error = ViewBag.Error as string;
}

<!doctype html>
<html lang="mk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <style>
        :root{
            --bg1:#0b1220;
            --bg2:#0f1b35;
            --text:#e5e7eb;
            --muted:#9ca3af;
            --stroke:rgba(255,255,255,.08);
            --shadow: 0 25px 60px rgba(0,0,0,.55);
            --accent:#7c3aed;
            --accent2:#22c55e;
            --danger:#ef4444;
            --radius: 18px;
        }

        *{ box-sizing:border-box; }
        html,body{ height:100%; }
        body{
            margin:0;
            font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
            color: var(--text);
            background:
                radial-gradient(900px 600px at 15% 10%, rgba(124,58,237,.25), transparent 60%),
                radial-gradient(800px 500px at 85% 20%, rgba(34,197,94,.18), transparent 55%),
                radial-gradient(900px 700px at 55% 90%, rgba(59,130,246,.12), transparent 60%),
                linear-gradient(180deg, var(--bg1), var(--bg2));
            overflow:hidden;
        }

        .blob{
            position:absolute;
            width:520px; height:520px;
            border-radius:50%;
            filter: blur(40px);
            opacity:.22;
            animation: float 10s ease-in-out infinite;
        }
        .blob.one{
            left:-180px; top:-160px;
            background: radial-gradient(circle at 30% 30%, rgba(124,58,237,.9), rgba(124,58,237,0));
        }
        .blob.two{
            right:-220px; top:40px;
            background: radial-gradient(circle at 30% 30%, rgba(34,197,94,.9), rgba(34,197,94,0));
            animation-delay: -3s;
        }
        @@keyframes float{
            0%,100%{ transform: translate3d(0,0,0) scale(1); }
            50%{ transform: translate3d(0,16px,0) scale(1.02); }
        }

        .wrap{
            position:relative;
            height:100%;
            display:grid;
            place-items:center;
            padding: 28px 16px;
        }

        .card{
            width:min(460px, 100%);
            border: 1px solid var(--stroke);
            background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
            backdrop-filter: blur(14px);
            box-shadow: var(--shadow);
            border-radius: var(--radius);
            overflow:hidden;
            animation: pop .55s cubic-bezier(.2,.9,.2,1) both;
        }
        @@keyframes pop{
            from{ opacity:0; transform: translateY(10px) scale(.98); }
            to{ opacity:1; transform: translateY(0) scale(1); }
        }

        .cardTop{
            padding: 22px 22px 18px;
            border-bottom: 1px solid var(--stroke);
            background: linear-gradient(180deg, rgba(15,23,42,.55), rgba(15,23,42,.25));
        }

        .brand{
            display:flex; align-items:center; gap:12px;
        }

        .logoImg{
            width:44px;
            height:44px;
            border-radius: 14px;
            background: rgba(255,255,255,.08);
            border: 1px solid rgba(255,255,255,.10);
            padding: 6px;
            object-fit: contain;
        }

        h1{
            font-size: 20px;
            margin:0;
            letter-spacing:.2px;
        }

        .cardBody{
            padding: 18px 22px 22px;
            background: linear-gradient(180deg, rgba(17,28,51,.35), rgba(17,28,51,.18));
        }

        .alert{
            display:flex;
            gap:10px;
            align-items:flex-start;
            padding: 12px 12px;
            border-radius: 14px;
            border: 1px solid rgba(239,68,68,.35);
            background: rgba(239,68,68,.10);
            margin-bottom: 14px;
            animation: shake .42s ease-in-out both;
        }
        .alertDot{
            width:10px; height:10px;
            border-radius:50%;
            margin-top:4px;
            background: var(--danger);
            box-shadow: 0 0 0 6px rgba(239,68,68,.14);
        }
        @@keyframes shake{
            0%{ transform: translateX(0); }
            20%{ transform: translateX(-6px); }
            40%{ transform: translateX(6px); }
            60%{ transform: translateX(-4px); }
            80%{ transform: translateX(4px); }
            100%{ transform: translateX(0); }
        }

        .field{
            display:flex;
            flex-direction:column;
            gap:8px;
            margin-top: 12px;
        }
        label{
            font-size: 13px;
            color: rgba(229,231,235,.92);
        }
        .inputWrap{ position:relative; }
        input{
            width:100%;
            padding: 12px 12px 12px 40px;
            border-radius: 14px;
            border: 1px solid var(--stroke);
            background: rgba(15,23,42,.55);
            color: var(--text);
            outline:none;
            transition: border-color .2s ease, transform .12s ease, box-shadow .2s ease;
        }
        input::placeholder{ color: rgba(156,163,175,.6); }
        input:focus{
            border-color: rgba(124,58,237,.55);
            box-shadow: 0 0 0 6px rgba(124,58,237,.14);
            transform: translateY(-1px);
        }
        .icon{
            position:absolute;
            left:12px; top:50%;
            transform: translateY(-50%);
            width:18px; height:18px;
            opacity:.7;
        }

        .btn{
            width:100%;
            margin-top: 16px;
            border:0;
            cursor:pointer;
            padding: 12px 14px;
            border-radius: 14px;
            font-weight: 650;
            letter-spacing: .2px;
            color: white;
            background: linear-gradient(135deg, rgba(124,58,237,.95), rgba(34,197,94,.75));
            box-shadow: 0 18px 35px rgba(124,58,237,.18);
            transition: transform .12s ease, filter .2s ease, box-shadow .2s ease;
        }
        .btn:hover{
            filter: brightness(1.05);
            box-shadow: 0 22px 45px rgba(124,58,237,.22);
            transform: translateY(-1px);
        }
        .btn:active{ transform: translateY(0); }

        .footer{
            margin-top: 14px;
            text-align:center;
            color: rgba(156,163,175,.75);
            font-size: 12px;
        }

        .cardBody > *{ animation: fadeUp .6s ease both; }
        .cardBody > *:nth-child(1){ animation-delay: .02s; }
        .cardBody > *:nth-child(2){ animation-delay: .07s; }
        .cardBody > *:nth-child(3){ animation-delay: .12s; }
        @@keyframes fadeUp{
            from{ opacity:0; transform: translateY(8px); }
            to{ opacity:1; transform: translateY(0); }
        }
    </style>
</head>

<body>
<div class="blob one"></div>
<div class="blob two"></div>

<div class="wrap">
    <div class="card" role="dialog" aria-label="Login">
        <div class="cardTop">
            <div class="brand">
                <img class="logoImg"
                     src="https://www.finki.ukim.mk/Content/dataImages/downloads/logo-large-500x500_2.png"
                     alt="ФИНКИ логo" />
                <div>
                    <h1>Присуство на студенти</h1>
                </div>
            </div>
        </div>
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="cardBody">
            @if (!string.IsNullOrWhiteSpace(error))
            {
            <div class="alert">
                <div class="alertDot"></div>
                <div>
                    <div style="font-weight:650;">Најавата не успеа</div>
                    <div style="color:rgba(229,231,235,.85); font-size:13px;">@error</div>
                </div>
            </div>
            }

            <form method="post" autocomplete="on">
                <div class="field">
                    <label>Корисничко име</label>
                    <div class="inputWrap">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path d="M12 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4Z" stroke="currentColor" stroke-width="2" opacity=".9"/>
                            <path d="M20 20a8 8 0 1 0-16 0" stroke="currentColor" stroke-width="2" opacity=".9"/>
                        </svg>
                        <input name="username" placeholder="Внеси e-mail или индекс" required />
                    </div>
                </div>

                <div class="field">
                    <label>Лозинка</label>
                    <div class="inputWrap">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path d="M7 10V8a5 5 0 0 1 10 0v2" stroke="currentColor" stroke-width="2" opacity=".9"/>
                            <path d="M6 10h12v10H6z" stroke="currentColor" stroke-width="2" opacity=".9"/>
                        </svg>
                        <input name="password" type="password" placeholder="••••••••" required />
                    </div>
                </div>

                <button class="btn" type="submit">Најава</button>

                <div class="footer">
                    © @DateTime.Now.Year • AttendanceStudents
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>