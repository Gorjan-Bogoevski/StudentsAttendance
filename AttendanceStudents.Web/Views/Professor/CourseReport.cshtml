@using AttendanceStudents.Domain.DTOs
@model CourseReportViewModel
@{
    Layout = null;
    var r = Model.Report;
    var f = Model.Filter;
}
@functions{
    string F(DateOnly? d) => d.HasValue ? d.Value.ToString("dd.MM.yyyy") : "—";
}
<div class="page">
    <div class="topbar">
        <h1 class="title">@r.CourseName – Reports</h1>
        <div class="actions">
            <a class="btn" href="@Url.Action("Reports","Professor")">← Назад кон предмети</a>
        </div>
    </div>

    <div class="panel">
        <div class="panelHead">
            <div class="leftTools">
                <h2 class="panelTitle">Филтри</h2>

                <form method="get" action="@Url.Action("CourseReport","Professor")" class="filtersForm">
                    <input type="hidden" name="courseId" value="@r.CourseId" />

                    <input class="filterInput" type="text" name="search" value="@f.Search"
                           placeholder="Пребарај индекс / име..." />

                    <select class="filter" name="week">
                        <option value="">Сите недели</option>

                        @foreach (var w in r.AllWeeks)
                        {
                            var d = (r.WeekDates != null && r.WeekDates.ContainsKey(w)) ? r.WeekDates[w] : (DateOnly?)null;

                            <option value="@w" selected="@(f.Week == w ? "selected" : null)">
                                Недела @w (@F(d))
                            </option>
                        }
                    </select>

                    <button class="btn btnPrimary" type="submit">Примени</button>
                </form>
            </div>

            <span class="count">@r.TotalStudents студенти</span>
        </div>

        <div class="panelBody" style="padding:0;">
           
            <div class="mobileCards">
                @foreach (var s in r.Students)
                {
                    <div class="studentCard">
                        <div class="studentTop">
                            <div>
                                <div class="studentIndex">@s.Index</div>
                                <div class="studentName">@s.FullName</div>
                            </div>
                            <div class="studentTotal">
                                <div class="totalNum">@s.PresentCount</div>
                                <div class="totalLbl">Вкупно</div>
                            </div>
                        </div>

                        <div class="weeksGrid">
                            @foreach (var w in r.Weeks)
                            {
                                var d = (r.WeekDates != null && r.WeekDates.ContainsKey(w)) ? r.WeekDates[w] : (DateOnly?)null;
                                var cell = s.ByWeek.ContainsKey(w) ? s.ByWeek[w] : null;
                                var present = cell != null && cell.Present;

                                <div class="weekChip @(present ? "ok" : "no")">
                                    <div class="wkTitle">Нед. @w</div>
                                    <div class="wkDate">@F(d)</div>
                                    @* <div class="wkMark">@(present ? "✔" : "—")</div> *@
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
:root{
    --bg1:#0b1220;
    --bg2:#0f1b35;
    --text:#e5e7eb;
    --muted:#9ca3af;
    --stroke:rgba(255,255,255,.08);
    --shadow: 0 25px 60px rgba(0,0,0,.55);
    --accent:#7c3aed;
    --accent2:#22c55e;
    --danger:#ef4444;
    --radius: 18px;
}

*{ box-sizing:border-box; }
html,body{ height:100%; }
body{
    margin:0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
    color: var(--text);
    background:
        radial-gradient(900px 600px at 15% 10%, rgba(124,58,237,.25), transparent 60%),
        radial-gradient(800px 500px at 85% 20%, rgba(34,197,94,.18), transparent 55%),
        radial-gradient(900px 700px at 55% 90%, rgba(59,130,246,.12), transparent 60%),
        linear-gradient(180deg, var(--bg1), var(--bg2));
}

.page{
    max-width: 1100px;
    margin: 28px auto;
    padding: 0 16px 40px;
}

.topbar{
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:12px;
    margin-bottom: 14px;
}
.title{ margin:0; font-size: 22px; letter-spacing:.2px; }

.actions{ display:flex; gap:10px; flex-wrap:wrap; justify-content:flex-end; }

.btn{
    border:1px solid var(--stroke);
    background: rgba(15,23,42,.55);
    color: var(--text);
    padding: 10px 12px;
    border-radius: 14px;
    text-decoration:none;
    cursor:pointer;
    transition: transform .12s ease, box-shadow .2s ease, border-color .2s ease, filter .2s ease;
    display:inline-flex;
    align-items:center;
    justify-content:center;
    font-weight: 700;
}
.btn:hover{
    transform: translateY(-1px);
    border-color: rgba(124,58,237,.45);
    box-shadow: 0 14px 35px rgba(0,0,0,.35);
    filter: brightness(1.03);
}
.btn:active{ transform: translateY(0); }

.btnPrimary{
    background: linear-gradient(135deg, rgba(124,58,237,.95), rgba(34,197,94,.75));
    border-color: rgba(255,255,255,.10);
    color:#fff;
    box-shadow: 0 18px 35px rgba(124,58,237,.18);
}

.panel{
    border: 1px solid var(--stroke);
    background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
    backdrop-filter: blur(14px);
    box-shadow: var(--shadow);
    border-radius: var(--radius);
    overflow:hidden;
    animation: pop .55s cubic-bezier(.2,.9,.2,1) both;
}

.panelHead{
    padding: 14px 18px;
    border-bottom: 1px solid var(--stroke);
    background: linear-gradient(180deg, rgba(15,23,42,.55), rgba(15,23,42,.25));
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:12px;
    flex-wrap:wrap;
}

.panelTitle{ margin:0; font-size: 16px; letter-spacing:.2px; }

.leftTools{
    display:flex;
    align-items:center;
    gap:12px;
    flex-wrap:wrap;
}

.count{
    font-size: 12px;
    color: rgba(229,231,235,.85);
    border: 1px solid var(--stroke);
    background: rgba(15,23,42,.45);
    padding: 6px 10px;
    border-radius: 999px;
    white-space:nowrap;
}

.filtersForm{ display:flex; gap:10px; flex-wrap:wrap; align-items:center; }

.filterInput{
    border:1px solid var(--stroke);
    background: rgba(15,23,42,.55);
    color: var(--text);
    padding: 10px 12px;
    border-radius: 14px;
    outline:none;
    font-weight: 600;
    min-width: 240px;
    transition: box-shadow .2s ease, border-color .2s ease;
}
.filterInput:focus{
    border-color: rgba(124,58,237,.6);
    box-shadow: 0 0 0 6px rgba(124,58,237,.15);
}

.filter{
    border:1px solid var(--stroke);
    background: rgba(15,23,42,.55);
    color: var(--text);
    padding: 10px 12px;
    border-radius: 14px;
    outline:none;
    font-weight: 600;
    transition: box-shadow .2s ease, border-color .2s ease;
}
.filter:focus{
    border-color: rgba(124,58,237,.6);
    box-shadow: 0 0 0 6px rgba(124,58,237,.15);
}

.reportTable th, .reportTable td{
    border:1px solid rgba(255,255,255,.08);
    padding:10px 12px;
}

.reportTable thead th{
    background: rgba(15,23,42,.55);
    font-weight:900;
}

.reportTable tbody tr{
    animation: fadeUp .45s ease both;
    transition: background .15s ease;
}

.reportTable tbody tr:hover{
    background: rgba(124,58,237,.06);
}



@@media (max-width: 560px){
    .topbar{ flex-direction:column; align-items:flex-start; }
    .filtersForm{ width:100%; }
    .filterInput{ min-width: 100%; }
}

@@keyframes pop{
    from{ opacity:0; transform: translateY(10px) scale(.98); }
    to{ opacity:1; transform: translateY(0) scale(1); }
}
@@keyframes fadeUp{
    from{ opacity:0; transform: translateY(10px); }
    to{ opacity:1; transform: translateY(0); }
}

.studentCard{
    border:1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.03);
    border-radius: 18px;
    padding: 14px;
    box-shadow: 0 14px 35px rgba(0,0,0,.35);
    margin-bottom: 12px;
    animation: fadeUp .45s ease both;
}

.studentTop{
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap:10px;
    padding-bottom: 10px;
    border-bottom: 1px solid rgba(255,255,255,.08);
    margin-bottom: 10px;
}

.studentIndex{
    font-weight: 900;
    font-size: 15px;
    letter-spacing:.3px;
}

.studentName{
    color: rgba(229,231,235,.80);
    font-weight: 700;
    font-size: 13px;
    margin-top: 2px;
}

.studentTotal{
    text-align:right;
    min-width: 70px;
}

.totalNum{
    font-weight: 950;
    font-size: 20px;
}

.totalLbl{
    font-size: 12px;
    color: rgba(229,231,235,.65);
    font-weight: 700;
}

.weeksGrid{
    display:grid;
    grid-template-columns: repeat(auto-fit, minmax(95px, 1fr));
    gap: 10px;
}



.weekChip{
    border-radius: 14px;
    padding: 10px 10px 8px;
    border:1px solid rgba(255,255,255,.10);
    background: rgba(15,23,42,.40);
    text-align:center;
}

.weekChip.ok{
    border-color: rgba(34,197,94,.35);
    background: rgba(34,197,94,.10);
}

.weekChip.no{
    border-color: rgba(239,68,68,.25);
    background: rgba(239,68,68,.06);
}

.wkTitle{ font-weight: 900; font-size: 12px; }
.wkDate{ font-size: 11px; color: rgba(229,231,235,.65); margin-top: 3px; }
.wkMark{ font-size: 16px; font-weight: 950; margin-top: 6px; }

.mobileCards{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 16px;
    padding: 16px;
}
</style>